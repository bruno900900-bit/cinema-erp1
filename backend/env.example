# Configurações do Banco de Dados
# Para desenvolvimento (SQLite) - MANTIDO PARA COMPATIBILIDADE
DATABASE_URL=sqlite:///./cinema_erp.db

# Para produção (PostgreSQL)
# POSTGRES_USER=cinema_erp
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=cinema_erp

# Configurações do Firebase (RECOMENDADO)
FIREBASE_PROJECT_ID=palaoro-production
# Use o bucket GCS do projeto (formato atualizado: <project_id>.firebasestorage.app)
FIREBASE_STORAGE_BUCKET=palaoro-production.firebasestorage.app
FIREBASE_DATABASE_URL=https://palaoro-production-default-rtdb.firebaseio.com

# Firebase Service Account (opcional - usar ADC se não fornecido)
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_CLIENT_X509_CERT_URL=your_cert_url

# Configuração do banco principal (padrão local usa SQLite)
DATABASE_TYPE=sqlite  # sqlite, firebase, postgres

# Configurações da Aplicação
APP_NAME=Cinema ERP
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Configurações de Segurança
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
# Deixe em branco para desativar a exigência de API key em desenvolvimento
API_KEY=

# Configurações de Storage (S3/R2/MinIO)
STORAGE_TYPE=local  # local, s3, r2, minio
STORAGE_BUCKET=cinema-erp-photos
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=your_access_key
STORAGE_SECRET_KEY=your_secret_key
STORAGE_ENDPOINT_URL=  # Para R2/MinIO

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@cinemaerp.com

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=logs/cinema_erp.log

# Configurações de Performance
SQL_ECHO=false
WORKERS=4
MAX_CONNECTIONS=100

# Configurações de CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Configurações de Upload
MAX_FILE_SIZE=10485760  # 10MB em bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
THUMBNAIL_SIZE=300x300
